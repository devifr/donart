<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Show Static Page</h3>
  </div>
  <div class="panel-body">
    <dl>
      <dt>Code</dt>
      <dd><%= @static_page.code %></dd>
    </dl>
    <dl>
      <dt>Title</dt>
      <dd><%= @static_page.title %></dd>
    </dl>
    <dl>
      <dt>Description</dt>
      <dd><%= raw(@static_page.description.to_s.force_encoding('UTF-8')) %></dd>
    </dl>
    <div class='form-group'>
      <%= link_to 'Edit', edit_backend_static_page_path(@static_page), class: 'btn btn-primary' %>
      <%= link_to 'Back', :back, class: 'btn btn-default' %>
    </div>
  </div>
</div>
